{
  "name": "sails",
  "version": "0.5.1",
  "private": true,
  "author": "Gear Technologies",
  "repository": {
    "url": "git@github.com:gear-tech/sails.git",
    "type": "git",
    "directory": "js"
  },
  "license": "GPL-3.0",
  "packageManager": "pnpm@10.28.2",
  "workspaces": [
    "js",
    "js/cli",
    "js/parser",
    "js/parser-idl-v2",
    "js/types",
    "js/util",
    "js/example"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/types": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rollup": "^4.53.2",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:sails": "pnpm --filter sails-js build",
    "build:cli": "pnpm --filter sails-js-cli build",
    "build:parser": "pnpm --filter sails-js-parser build",
    "build:types": "pnpm --filter sails-js-types build",
    "build:util": "pnpm --filter sails-js-util build",
    "build:example": "pnpm --filter sails-js-example build",
    "build": "pnpm --stream --reporter=append-only -r build",
    "pack": "pnpm --filter sails-js --filter \"sails-js-*\" -r pack --out js/%s.tgz",
    "bump:version": "bash ./js/scripts/bump-versions.sh",
    "test": "pnpm --filter sails-js test",
    "test:js": "pnpm --filter sails-js test",
    "test:cli": "pnpm --filter sails-js-cli test",
    "publish": "pnpm -r publish --access public",
    "lint": "npx eslint -c eslint.config.mjs",
    "lint:fix": "npx eslint --fix",
    "format": "prettier --write \"js/**/src/**/*.ts\"",
    "clean": "rm -rf node_modules js/{.,*}/node_modules js/cli/build js/{parser,.,types}/lib js/**/*.tgz pnpm-lock.yaml"
  }
}
